{
  "ignore": [
    ".*",
    "*.txt",
    "CONTRIBUTING",
    "build",
    "dist",
    "*.md",
    "*.yml",
    "*.html"
  ],
  "license": "license-header.txt",
  "licenseFormats": {
    "js|ts|mjs": {
      "prepend": "/**",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html|md": {
      "prepend": "<!--",
      "append": "-->"
    },
    "sh|^pre-commit": {
      "eachLine": {
        "prepend": "# "
      }
    }
  },
  "trailingWhitespace": "TRIM"
}
